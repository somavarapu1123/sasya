{% doc %}
  @prompt
    need a section where we showcase icons for From the Farmers, Certified Organic Products, Secure Transactions, Fast Shipping
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-features-showcase-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-features-showcase__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-features-showcase__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.gap }}px;
    align-items: start;
  }

  .ai-features-showcase__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: {{ block.settings.layout }};
    align-items: center;
    gap: {{ block.settings.item_gap }}px;
    text-align: {% if block.settings.layout == 'column' %}center{% else %}left{% endif %};
  }

  .ai-features-showcase__icon-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_background }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    padding: {{ block.settings.icon_padding }}px;
  }

  .ai-features-showcase__icon-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    color: {{ block.settings.icon_color }};
  }

  .ai-features-showcase__content-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-features-showcase__title-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    line-height: 1.3;
  }

  .ai-features-showcase__description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-features-showcase__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-features-showcase__icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-features-showcase__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-features-showcase__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-features-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-features-showcase__container-{{ ai_gen_id }}">
    <div class="ai-features-showcase__grid-{{ ai_gen_id }}">
      {% if block.settings.feature_1_enabled %}
        <div class="ai-features-showcase__item-{{ ai_gen_id }}">
          <div class="ai-features-showcase__icon-wrapper-{{ ai_gen_id }}">
            <svg class="ai-features-showcase__icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
            </svg>
          </div>
          <div class="ai-features-showcase__content-{{ ai_gen_id }}">
            <h3 class="ai-features-showcase__title-{{ ai_gen_id }}">{{ block.settings.feature_1_title }}</h3>
            {% if block.settings.feature_1_description != blank %}
              <p class="ai-features-showcase__description-{{ ai_gen_id }}">{{ block.settings.feature_1_description }}</p>
            {% endif %}
          </div>
        </div>
      {% endif %}

      {% if block.settings.feature_2_enabled %}
        <div class="ai-features-showcase__item-{{ ai_gen_id }}">
          <div class="ai-features-showcase__icon-wrapper-{{ ai_gen_id }}">
            <svg class="ai-features-showcase__icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
          </div>
          <div class="ai-features-showcase__content-{{ ai_gen_id }}">
            <h3 class="ai-features-showcase__title-{{ ai_gen_id }}">{{ block.settings.feature_2_title }}</h3>
            {% if block.settings.feature_2_description != blank %}
              <p class="ai-features-showcase__description-{{ ai_gen_id }}">{{ block.settings.feature_2_description }}</p>
            {% endif %}
          </div>
        </div>
      {% endif %}

      {% if block.settings.feature_3_enabled %}
        <div class="ai-features-showcase__item-{{ ai_gen_id }}">
          <div class="ai-features-showcase__icon-wrapper-{{ ai_gen_id }}">
            <svg class="ai-features-showcase__icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
          </div>
          <div class="ai-features-showcase__content-{{ ai_gen_id }}">
            <h3 class="ai-features-showcase__title-{{ ai_gen_id }}">{{ block.settings.feature_3_title }}</h3>
            {% if block.settings.feature_3_description != blank %}
              <p class="ai-features-showcase__description-{{ ai_gen_id }}">{{ block.settings.feature_3_description }}</p>
            {% endif %}
          </div>
        </div>
      {% endif %}

      {% if block.settings.feature_4_enabled %}
        <div class="ai-features-showcase__item-{{ ai_gen_id }}">
          <div class="ai-features-showcase__icon-wrapper-{{ ai_gen_id }}">
            <svg class="ai-features-showcase__icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="1" y="3" width="15" height="13"></rect>
              <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
              <circle cx="5.5" cy="18.5" r="2.5"></circle>
              <circle cx="18.5" cy="18.5" r="2.5"></circle>
            </svg>
          </div>
          <div class="ai-features-showcase__content-{{ ai_gen_id }}">
            <h3 class="ai-features-showcase__title-{{ ai_gen_id }}">{{ block.settings.feature_4_title }}</h3>
            {% if block.settings.feature_4_description != blank %}
              <p class="ai-features-showcase__description-{{ ai_gen_id }}">{{ block.settings.feature_4_description }}</p>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

