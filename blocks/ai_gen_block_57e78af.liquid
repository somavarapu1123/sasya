{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-genre-grid-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-genre-grid__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .ai-genre-grid__heading-{{ ai_gen_id }} {
    margin-bottom: 30px;
    color: {{ block.settings.heading_color }};
  }

  .ai-genre-grid__items-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    gap: {{ block.settings.gap_mobile }}px;
    margin-bottom: 30px;
  }

  @media screen and (min-width: 750px) {
    .ai-genre-grid__items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
      gap: {{ block.settings.gap_desktop }}px;
    }
  }

  .ai-genre-grid__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  {% if block.settings.hover_effect == 'lift' %}
    .ai-genre-grid__item-{{ ai_gen_id }}:hover {
      transform: translateY(-8px);
    }
  {% elsif block.settings.hover_effect == 'scale' %}
    .ai-genre-grid__item-{{ ai_gen_id }}:hover {
      transform: scale(1.05);
    }
  {% elsif block.settings.hover_effect == 'rotate' %}
    .ai-genre-grid__item-{{ ai_gen_id }}:hover {
      transform: rotate(2deg);
    }
  {% endif %}

  .ai-genre-grid__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    margin-bottom: 12px;
    box-shadow: 
      inset {{ block.settings.inset_depth }}px {{ block.settings.inset_depth }}px {{ block.settings.inset_blur }}px rgba(0, 0, 0, {{ block.settings.inset_opacity }}),
      inset -{{ block.settings.inset_depth }}px -{{ block.settings.inset_depth }}px {{ block.settings.inset_blur }}px rgba(0, 0, 0, {{ block.settings.inset_opacity }});
  }

  .ai-genre-grid__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-genre-grid__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-genre-grid__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-genre-grid__name-{{ ai_gen_id }} {
    font-weight: 700;
    font-size: {{ block.settings.name_font_size }}px;
    color: {{ block.settings.name_color }};
    text-align: center;
  }

  .ai-genre-grid__view-all-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .ai-genre-grid__view-all-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    transform: translateY(-2px);
  }
{% endstyle %}

<genre-grid-{{ ai_gen_id }} class="ai-genre-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-genre-grid__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-genre-grid__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-genre-grid__items-{{ ai_gen_id }}">
      {% for i in (1..20) %}
        {% liquid
          assign image_key = 'genre_image_' | append: i
          assign name_key = 'genre_name_' | append: i
          assign url_key = 'genre_url_' | append: i
          
          assign genre_image = block.settings[image_key]
          assign genre_name = block.settings[name_key]
          assign genre_url = block.settings[url_key]
        %}

        {% if genre_name != blank %}
          <a 
            href="{% if genre_url != blank %}{{ genre_url }}{% else %}#{% endif %}" 
            class="ai-genre-grid__item-{{ ai_gen_id }}"
          >
            <div class="ai-genre-grid__image-wrapper-{{ ai_gen_id }}">
              {% if genre_image %}
                <img
                  src="{{ genre_image | image_url: width: 400 }}"
                  alt="{{ genre_name | escape }}"
                  class="ai-genre-grid__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="400"
                  height="{{ 400 | divided_by: block.settings.image_aspect_ratio | round }}"
                >
              {% else %}
                <div class="ai-genre-grid__placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-genre-grid__name-{{ ai_gen_id }}">{{ genre_name }}</div>
          </a>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.view_all_text != blank %}
      <a 
        href="{% if block.settings.view_all_url != blank %}{{ block.settings.view_all_url }}{% else %}#{% endif %}" 
        class="ai-genre-grid__view-all-{{ ai_gen_id }}"
      >
        {{ block.settings.view_all_text }}
      </a>
    {% endif %}
  </div>
</genre-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class GenreGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const items = this.querySelectorAll('.ai-genre-grid__item-{{ ai_gen_id }}');
        items.forEach(item => {
          if (item.getAttribute('href') === '#') {
            item.setAttribute('aria-disabled', 'true');
          }
        });
      }
    }

    customElements.define('genre-grid-{{ ai_gen_id }}', GenreGrid{{ ai_gen_id }});
  })();
</script>

