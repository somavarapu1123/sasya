{% doc %}
  @prompt
    need office address, mobile and mail section in the footer
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-contact-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-footer-contact__container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.spacing }}px;
  }

  .ai-footer-contact__heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-footer-contact__item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: {{ block.settings.icon_spacing }}px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-footer-contact__icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
    margin-top: 2px;
  }

  .ai-footer-contact__icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke-width: {{ block.settings.icon_stroke_width }};
  }

  .ai-footer-contact__content-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-footer-contact__link-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-footer-contact__link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-footer-contact-{{ ai_gen_id }} {
      width: 100%;
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-footer-contact__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-footer-contact__item-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-footer-contact__icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.9 }}px;
      height: {{ block.settings.icon_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-footer-contact-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-contact__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h3 class="ai-footer-contact__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
    {% endif %}

    {% if block.settings.show_address and block.settings.address != blank %}
      <div class="ai-footer-contact__item-{{ ai_gen_id }}">
        <div class="ai-footer-contact__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
        </div>
        <div class="ai-footer-contact__content-{{ ai_gen_id }}">
          {{ block.settings.address }}
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_phone and block.settings.phone != blank %}
      <div class="ai-footer-contact__item-{{ ai_gen_id }}">
        <div class="ai-footer-contact__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
        </div>
        <div class="ai-footer-contact__content-{{ ai_gen_id }}">
          <a href="tel:{{ block.settings.phone | replace: ' ', '' }}" class="ai-footer-contact__link-{{ ai_gen_id }}">
            {{ block.settings.phone }}
          </a>
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_email and block.settings.email != blank %}
      <div class="ai-footer-contact__item-{{ ai_gen_id }}">
        <div class="ai-footer-contact__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
        </div>
        <div class="ai-footer-contact__content-{{ ai_gen_id }}">
          <a href="mailto:{{ block.settings.email }}" class="ai-footer-contact__link-{{ ai_gen_id }}">
            {{ block.settings.email }}
          </a>
        </div>
      </div>
    {% endif %}
  </div>
</div>

